<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:padding="@dimen/fragment_root_padding">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pop_top_view_height"
        android:layout_marginBottom="@dimen/top_view_marginBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/reservation_information"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/text_color_black"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_pre_month"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_left" />

            <TextView
                android:id="@+id/tv_current_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/text_color_black"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_medium"
                tools:text="2021年5月" />

            <ImageView
                android:id="@+id/iv_next_month"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_gray_corners_bg"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_month"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="@drawable/btn_blue_transparent_bg"
                android:textSize="@dimen/text_size_medium"
                android:text="@string/month"
                android:textColor="@drawable/btn_text_color_gray_white" />

            <Button
                android:id="@+id/btn_week"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="@drawable/btn_blue_transparent_bg"
                android:textSize="@dimen/text_size_medium"
                android:text="@string/week"
                android:textColor="@drawable/btn_text_color_gray_white" />
        </LinearLayout>
    </RelativeLayout>

    <com.haibin.calendarview.CalendarLayout
        android:id="@+id/calendar_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:calendar_content_view_id="@+id/nsl"
        app:calendar_show_mode="both_month_week_view"
        app:gesture_mode="default_mode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_top">

        <com.haibin.calendarview.CalendarView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            app:current_month_lunar_text_color="#CFCFCF"
            app:max_year_day="31"
            app:max_year_month="12"
            app:min_year="2000"
            app:min_year_day="1"
            app:min_year_month="1"
            app:month_view="com.xlk.takstarpaperlessmanage.ui.calendar.CustomMonthView"
            app:week_view="com.xlk.takstarpaperlessmanage.ui.calendar.CustomWeekView"
            app:year_view="com.xlk.takstarpaperlessmanage.ui.calendar.CustomYearView"
            app:year_view_day_text_color="#333333"
            app:year_view_day_text_size="7sp"
            app:year_view_month_text_color="#ff0000"
            app:year_view_month_text_size="20sp"
            app:year_view_scheme_color="#f17706"
            app:year_view_select_text_color="#fff"
            app:year_view_week_text_color="#e1e1e1" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_sun"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_sun_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="盛开的积分了快捷" />

                    <TextView
                        android:id="@+id/tv_sun_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="盛开的积分了快捷" />

                    <TextView
                        android:id="@+id/tv_sun_ordernamer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="盛开的积分了快捷" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_mon_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="盛开的积分了快捷" />

                    <TextView
                        android:id="@+id/tv_mon_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="盛开的积分了快捷" />

                    <TextView
                        android:id="@+id/tv_mon_ordernamer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="盛开的积分了快捷" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_tue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_tue_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="盛开的积分了快捷" />

                    <TextView
                        android:id="@+id/tv_tue_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="盛开的积分了快捷" />

                    <TextView
                        android:id="@+id/tv_tue_ordernamer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="盛开的积分了快捷" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_wed"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_wed_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="盛开的积分了快捷" />

                    <TextView
                        android:id="@+id/tv_wed_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="盛开的积分了快捷" />

                    <TextView
                        android:id="@+id/tv_wed_ordernamer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="盛开的积分了快捷" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_thu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_thu_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="盛开的积分了快捷" />

                    <TextView
                        android:id="@+id/tv_thu_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="盛开的积分了快捷" />

                    <TextView
                        android:id="@+id/tv_thu_ordernamer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="盛开的积分了快捷" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_fri"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_fri_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="盛开的积分了快捷" />

                    <TextView
                        android:id="@+id/tv_fri_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="盛开的积分了快捷" />

                    <TextView
                        android:id="@+id/tv_fri_ordernamer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="盛开的积分了快捷" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_sat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_sat_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="盛开的积分了快捷" />

                    <TextView
                        android:id="@+id/tv_sat_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="盛开的积分了快捷" />

                    <TextView
                        android:id="@+id/tv_sat_ordernamer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="盛开的积分了快捷" />
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.haibin.calendarview.CalendarLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_baseline_add_24"
        app:elevation="8dp"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:pressedTranslationZ="10dp" />
</androidx.constraintlayout.widget.ConstraintLayout>