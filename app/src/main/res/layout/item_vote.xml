<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_root_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_view_height"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_view_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:singleLine="true"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/text_size_small"
        tools:text="@string/number" />

    <TextView
        android:id="@+id/item_view_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="5"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:singleLine="true"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/text_size_small"
        tools:text="@string/meeting_name" />

    <TextView
        android:id="@+id/item_view_3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:singleLine="true"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/text_size_small"
        tools:text="@string/meeting_status" />


    <LinearLayout
        android:id="@+id/ll_operation_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:layout_weight="2"
        android:background="#FFFFFF"
        android:gravity="center">

        <TextView
            android:id="@+id/operation_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:drawableStart="@drawable/ic_modify"
            android:drawablePadding="2dp"
            android:text="@string/modify"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/operation_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:drawableStart="@drawable/ic_delete"
            android:drawablePadding="2dp"
            android:text="@string/delete"
            android:textColor="@color/blue" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_view_4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:singleLine="true"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/text_size_small"
        tools:text="@string/confidentiality" />

</LinearLayout>