<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:orientation="vertical"
    android:paddingStart="@dimen/fragment_root_padding"
    android:paddingEnd="@dimen/fragment_root_padding"
    android:paddingBottom="@dimen/fragment_root_padding">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_room"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_view_height"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_dialog_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/tv_seat_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold"
                tools:text="席位数量：4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:textSize="@dimen/text_size_normal"
                android:text="@string/seat_bg_specification"
                android:textColor="@color/black" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.xlk.takstarpaperlessmanage.ui.CustomSeatView
                    android:id="@+id/seat_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@color/content_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_display_icon"
                    style="@style/checkbox_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/display_icon"
                    android:textSize="@dimen/text_size_normal" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_up"
                            style="@style/button_hollow_style_rect_white_blue_radius5"
                            android:layout_width="38dp"
                            android:layout_height="18dp"
                            android:layout_marginEnd="5dp"
                            android:text="@string/top" />

                        <Button
                            android:id="@+id/btn_bottom"
                            style="@style/button_hollow_style_rect_white_blue_radius5"
                            android:layout_width="38dp"
                            android:layout_height="18dp"
                            android:layout_marginEnd="5dp"
                            android:text="@string/bottom" />

                        <Button
                            android:id="@+id/btn_left"
                            style="@style/button_hollow_style_rect_white_blue_radius5"
                            android:layout_width="38dp"
                            android:layout_height="18dp"
                            android:layout_marginEnd="5dp"
                            android:text="@string/left" />

                        <Button
                            android:id="@+id/btn_right"
                            style="@style/button_hollow_style_rect_white_blue_radius5"
                            android:layout_width="38dp"
                            android:layout_height="18dp"
                            android:layout_marginEnd="5dp"
                            android:text="@string/right" />

                        <Button
                            android:id="@+id/btn_left_side"
                            style="@style/button_hollow_style_rect_white_blue_radius5"
                            android:layout_width="65dp"
                            android:layout_height="18dp"
                            android:layout_marginEnd="5dp"
                            android:text="@string/left_side_alignment" />

                        <Button
                            android:id="@+id/btn_bottom_side"
                            style="@style/button_hollow_style_rect_white_blue_radius5"
                            android:layout_width="65dp"
                            android:layout_height="18dp"
                            android:layout_marginEnd="5dp"
                            android:text="@string/bottom_side_alignment" />

                        <Button
                            android:id="@+id/btn_preview"
                            style="@style/button_hollow_style_rect_white_blue_radius5"
                            android:layout_width="65dp"
                            android:layout_height="18dp"
                            android:layout_marginEnd="5dp"
                            android:text="@string/preview_base_image" />

                        <Button
                            android:id="@+id/btn_save"
                            style="@style/button_hollow_style_rect_white_blue_radius5"
                            android:layout_width="65dp"
                            android:layout_height="18dp"
                            android:text="@string/save_base_image" />
                    </LinearLayout>

<!--                    <LinearLayout-->
