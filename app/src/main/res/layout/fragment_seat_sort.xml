<!--                        android:orientation="horizontal">-->

<!--                        <Button-->
<!--                            android:id="@+id/btn_left_side"-->
<!--                            style="@style/button_hollow_style_rect_white_blue_radius5"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_marginEnd="2dp"-->
<!--                            android:text="@string/left_side_alignment" />-->

<!--                        <Button-->
<!--                            android:id="@+id/btn_bottom_side"-->
<!--                            style="@style/button_hollow_style_rect_white_blue_radius5"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_marginEnd="2dp"-->
<!--                            android:text="@string/bottom_side_alignment" />-->

<!--                        <Button-->
<!--                            android:id="@+id/btn_preview"-->
<!--                            style="@style/button_hollow_style_rect_white_blue_radius5"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_marginEnd="2dp"-->
<!--                            android:text="@string/preview_base_image" />-->

<!--                        <Button-->
<!--                            android:id="@+id/btn_save"-->
<!--                            style="@style/button_hollow_style_rect_white_blue_radius5"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:text="@string/save_base_image" />-->
<!--                    </LinearLayout>-->
                </LinearLayout>

                <Button
                    android:id="@+id/btn_restore"
                    style="@style/button_solid_style_rect_blue_white_radius5"
                    android:layout_width="75dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="2dp"
                    android:text="@string/restore" />

                <Button
                    android:id="@+id/btn_define"
                    style="@style/button_solid_style_rect_blue_white_radius5"
                    android:layout_width="75dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="2dp"
                    android:text="@string/define" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>