<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_play_ctor"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pop_video_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pop_video_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/video_time"
            tools:text="00:00:00" />

        <SeekBar
            android:id="@+id/pop_video_seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:thumb="@drawable/shape_circle_red" />

        <TextView
            android:id="@+id/pop_video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/video_time"
            tools:text="00:00:00" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pop_video_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_play_btn"
            android:text="@string/play_pause"
            android:textColor="@drawable/play_text_color_status"
            android:textSize="@dimen/text_size_normal" />

        <Button
            android:id="@+id/pop_video_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_play_btn"
            android:text="@string/stop"
            android:textColor="@drawable/play_text_color_status"
            android:textSize="@dimen/text_size_normal" />

        <Button
            android:id="@+id/pop_video_screen_shot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_play_btn"
            android:text="@string/screen_shot"
            android:textColor="@drawable/play_text_color_status"
            android:textSize="@dimen/text_size_normal" />

        <Button
            android:id="@+id/pop_video_launch_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            android:background="@drawable/ic_play_btn"
            android:text="@string/launch_screen"
            android:textColor="@drawable/play_text_color_status"
            android:textSize="@dimen/text_size_normal" />

        <Button
            android:id="@+id/pop_video_stop_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_play_btn"
            android:text="@string/stop_screen"
            android:visibility="gone"
            android:textColor="@drawable/play_text_color_status"
            android:textSize="@dimen/text_size_normal" />

    </LinearLayout>
</LinearLayout>