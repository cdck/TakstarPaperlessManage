<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/video_pop_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pop_video_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pop_video_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/video_time"
            tools:text="00:00:00" />

        <SeekBar
            android:id="@+id/pop_video_seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:thumb="@drawable/shape_circle_red" />

        <TextView
            android:id="@+id/pop_video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/video_time"
            tools:text="00:00:00" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pop_video_play"
            style="@style/button_hollow_style_rect_white_blue_radius5"
            android:layout_width="0dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="@string/play_pause" />

        <Button
            android:id="@+id/pop_video_stop"
            style="@style/button_hollow_style_rect_white_blue_radius5"
            android:layout_width="0dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="@string/stop" />

        <Button
            android:id="@+id/pop_video_screen_shot"
            style="@style/button_hollow_style_rect_white_blue_radius5"
            android:layout_width="0dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="@string/screen_shot" />

        <Button
            android:id="@+id/pop_video_launch_screen"
            style="@style/button_hollow_style_rect_white_blue_radius5"
            android:layout_width="0dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="@string/launch_screen" />

        <Button
            android:id="@+id/pop_video_stop_screen"
            style="@style/button_hollow_style_rect_white_blue_radius5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/stop_screen" />

    </LinearLayout>
</LinearLayout>