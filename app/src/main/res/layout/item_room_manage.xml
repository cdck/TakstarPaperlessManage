<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_view_height">

    <TextView
        android:id="@+id/item_view_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="@string/number"
        android:textColor="@color/text_default_color"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/item_view_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/device_id"
        android:textColor="@color/text_default_color"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/item_view_3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/device_name"
        android:textColor="@color/text_default_color"
        android:textSize="@dimen/text_size_small" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="2.5"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_device_manage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_manage"
            android:text="@string/device_management"
            android:drawablePadding="2dp"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/tv_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:drawableStart="@drawable/ic_modify"
            android:drawablePadding="2dp"
            android:text="@string/modify"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_delete"
            android:drawablePadding="2dp"
            android:text="@string/delete"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_view_4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/version_number"
        android:textColor="@color/text_default_color"
        android:textSize="@dimen/text_size_small" />

</LinearLayout>